{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "es6": true
  },
  "ecmaFeatures": {
    "modules": true
  },
  "parserOptions": {
    "allowImportExportEverywhere": true
  },
  "plugins": [
    "prettier"
  ],
  "settings": {
    "import/resolver": "meteor"
  },
  "globals": {
    "Package": true,
    "$": true
  },
  "rules": {
    "prettier/prettier": "error"
  }
}
